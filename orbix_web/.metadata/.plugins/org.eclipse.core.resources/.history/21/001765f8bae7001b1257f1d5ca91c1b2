package com.example.orbix_web.repositories;

import java.util.List;
import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import com.example.orbix_web.models.Role;
import com.example.orbix_web.models.RolePriveledge;

/**
 * @author GODFREY
 *
 */
@Repository
public interface RolePriveledgeRepository extends JpaRepository<RolePriveledge, Long>{

	/**
	 * @param role
	 * @return
	 */
	List<Role> findByRole(Role role);

	/**
	 * @param roleName
	 * @return
	 */
	Optional<Role> findByRoleAndName(String roleName);

}
